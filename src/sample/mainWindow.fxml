<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>


<BorderPane prefHeight="720.0"
            prefWidth="1280.0"
            xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sample.MainWindowController">
    <center>
        <TabPane prefHeight="720.0" prefWidth="1280.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
            <Tab closable="false" text="Bestellung">
                <content>
                    <fx:include fx:id="orderTab" source="orderTab.fxml"/>
                </content>
            </Tab>
            <Tab closable="false" text="Kunden">
                <content>
                    <fx:include fx:id="customerTab" source="customerTab.fxml"/>
                </content>
            </Tab>
            <Tab closable="false" text="Waren">
                <content>
                    <fx:include fx:id="itemTab" source="itemTab.fxml"/>
                </content>
            </Tab>
        </TabPane>
    </center>
</BorderPane>
